{
	"name": "ts-react-express-esbuild",
	"version": "1.0.0",
	"description": "A boilerplate project for TypeScript, React, Express using esbuild.",
	"main": "dist/server.js",
	"scripts": {
		"watch:client": "node esbuild-config/client.dev.mjs",
		"watch:server": "node esbuild-config/server.dev.mjs",
		"watch:restart-server": "nodemon --config nodemon.json",
		"dev": "npm-run-all --parallel watch:*",
		"build:client": "node esbuild-config/client.prod.mjs",
		"build:server": "node esbuild-config/server.prod.mjs",
		"build": "npm-run-all --sequential build:*",
		"start": "node dist/server.js"
	},
	"keywords": [
		"typescript",
		"react",
		"express",
		"esbuild",
		"boilerplate"
	],
	"author": "Covalence",
	"license": "MIT",
	"dependencies": {
		"2": "^3.0.0",
		"@stripe/react-stripe-js": "^2.7.1",
		"@stripe/stripe-js": "^3.4.0",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/passport": "^1.0.16",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"bcrypt": "^5.1.1",
		"bootstrap": "^5.3.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.18.2",
		"form-data": "^4.0.0",
		"jsonwebtoken": "^9.0.2",
		"mailgun.js": "^10.2.1",
		"mysql2": "^3.9.7",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^5.2.0",
		"react-router-dom": "^6.23.0",
		"stripe": "^15.6.0",
		"styled-components": "^5.3.10",
		"sweetalert": "^2.1.2",
		"sweetalert2": "^11.10.8"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/node": "^20.5.0",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"esbuild": "^0.19.2",
		"esbuild-sass-plugin": "^2.12.0",
		"nodemon": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"sass": "^1.65.1",
		"typescript": "^5.1.6",
		"webpack": "^5.91.0"
	}
}
